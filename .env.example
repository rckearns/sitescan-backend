# ─── SiteScan Backend Configuration ──────────────────────────────────────────
# Copy this to .env and fill in your values

# App
APP_NAME=SiteScan
APP_ENV=development
SECRET_KEY=change-me-to-a-random-64-char-string
API_HOST=0.0.0.0
API_PORT=8000

# Database (SQLite for dev, swap to postgres:// for production)
DATABASE_URL=sqlite+aiosqlite:///./sitescan.db

# SAM.gov API (free — register at sam.gov)
SAM_GOV_API_KEY=

# Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
NOTIFICATION_FROM_EMAIL=sitescan@yourdomain.com

# Twilio (optional — for SMS alerts)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# Scan Schedule (cron expression — default every 6 hours)
SCAN_CRON_HOURS=6

# Charleston ArcGIS (no key needed)
CHARLESTON_ARCGIS_URL=https://gis.charleston-sc.gov/arcgis2/rest/services/External/Applications/MapServer/20/query

# ConstructConnect (paid — optional)
CONSTRUCTCONNECT_API_KEY=
